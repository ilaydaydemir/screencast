{
  "manifest_version": 3,
  "name": "Screencast Recorder",
  "version": "1.0.0",
  "description": "Record your screen with webcam overlay. Like Loom, in your browser.",
  "permissions": [
    "tabCapture",
    "desktopCapture",
    "offscreen",
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://screencast-eight.vercel.app/*",
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
